<Window x:Class="avatar_movent_v2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:avatar_movent_v2"
        mc:Ignorable="d"
        Title="Avatar" Height="500" Width="400"
        WindowStyle="SingleBorderWindow" 
        Background="#0a87fc"
        ResizeMode="CanMinimize" VerticalAlignment="Stretch"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="113*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <Image Width="127" Margin="86,116,12,173" Source="/Resources/imageTop.png" RenderTransformOrigin="0,1">
            <Image.RenderTransform>
                <RotateTransform Angle="0" x:Name="ImageTop"/>
            </Image.RenderTransform>
        </Image>
        <Image Width="127" Margin="84,203,15,129" Source="/Resources/imageBottom.png" RenderTransformOrigin="0,1">
            <Image.RenderTransform>
                <RotateTransform Angle="0" x:Name="ImageBottom"/>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
